<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".mainActivity.fragments.SunFragment">

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:shrinkColumns="0, 1"
                 android:stretchColumns="1">

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp">

            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="Wschód:"/>

            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:id="@+id/sun_rise_txt_view"
                    android:text="6:00"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="Azymut:"/>

            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:id="@+id/sun_sunrise_azimuth_txt_view"
                    android:text="30°"/>
        </TableRow>

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp">

            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="Zachód:"/>

            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:id="@+id/sun_sunset_txt_view"
                    android:text="18:50"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="Azymut:"/>

            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:id="@+id/sun_sunset_azimuth_txt_view"
                    android:text="30°"/>
        </TableRow>

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp">

            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="Wschód cywilny:"/>

            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:id="@+id/sun_civil_sunrise_txt_view"
                    android:text="5:57:26"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="Zmierch cywilny:"/>

            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:id="@+id/sun_civil_sunset_azimuth_txt_view"
                    android:text="18:57:26"/>
        </TableRow>
    </TableLayout>
</FrameLayout>