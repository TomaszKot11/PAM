<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                 xmlns:tools="http://schemas.android.com/tools"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:background="@drawable/moon_gradient_list"
                 android:id="@+id/fragment_moon_frame_layout"
                 tools:context=".mainActivity.fragments.MoonFragment">

        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:shrinkColumns="0, 1"
                     android:stretchColumns="1">

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:textColor="@android:color/white"
                        android:text="Bieżący czas:"/>

                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:id="@+id/moon_current_time_txt_view"
                        android:textColor="@android:color/white"
                        android:text="2019-04-09 22:57:26"/>
            </TableRow>

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:textColor="@android:color/white"
                        android:text="Długość geograficzna::"/>

                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:id="@+id/moon_longitude"
                        android:textColor="@android:color/white"
                        android:text="20:00"/>
                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:textColor="@android:color/white"
                        android:text="Szerokość geograficzna:"/>

                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:id="@+id/moon_latitude"
                        android:textColor="@android:color/white"
                        android:text="5:50"/>
            </TableRow>

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:textColor="@android:color/white"
                        android:text="Wschód:"/>

                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:id="@+id/moon_rise_txt_view"
                        android:textColor="@android:color/white"
                        android:text="20:00"/>
                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:textColor="@android:color/white"
                        android:text="Zachód:"/>

                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:id="@+id/moon_wane_txt_view"
                        android:textColor="@android:color/white"
                        android:text="5:50"/>
            </TableRow>

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:textColor="@android:color/white"
                        android:text="Nów:"/>

                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:id="@+id/moon_new_moon_txt_view"
                        android:textColor="@android:color/white"
                        android:text="2019-04-09 22:57:26"/>
                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:textColor="@android:color/white"
                        android:text="Pełnia:"/>

                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:id="@+id/moon_full_txt_view"
                        android:textColor="@android:color/white"
                        android:text="2019-04-22 23:57:26"/>
            </TableRow>

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:textColor="@android:color/white"
                        android:text="Faza Księżyca:"/>

                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:textColor="@android:color/white"
                        android:id="@+id/moon_phase_moon_txt_view"
                        android:text="Ostatnia kwadra"/>
                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:textColor="@android:color/white"
                        android:text="Dzień synodyczny:"/>

                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:id="@+id/moon_synodic_month_txt_view"
                        android:textColor="@android:color/white"
                        android:text="poniedziałek, 2019-04-22 23:57:26"/>
            </TableRow>
        </TableLayout>
    </FrameLayout>
</ScrollView>