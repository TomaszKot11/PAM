<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".mainActivity.fragments.apiWeatherFragments.BasicWeatherInformationFragment">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/city_name_text_view"
            android:text="Nazwa miejscowości"/>

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/geographical_coordiantes_text_view"
              android:text="Współrzędne geggraficzne"
              android:layout_below="@id/city_name_text_view" />

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Czas"
              android:layout_below="@id/geographical_coordiantes_text_view"
              android:id="@+id/time_text_view" />

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_below="@id/time_text_view"
              android:id="@+id/temperature_text_view" />

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_below="@id/temperature_text_view"
              android:id="@+id/pressure_text_view" />

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_below="@id/pressure_text_view"
              android:id="@+id/description_text_view" />

    <!--TODO: visual representation -->


</RelativeLayout>